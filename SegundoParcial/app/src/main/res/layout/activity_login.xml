<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marty.a2doparcial.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/usuarioLbl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/text1"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/usuario"
        android:layout_alignStart="@+id/usuario" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/text2"
        android:maxLines="1"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:id="@+id/usuario" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contraLbl"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_above="@+id/contrasena"
        android:layout_alignStart="@+id/usuario" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/contrasena"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/login"
        android:layout_alignStart="@+id/text2" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/loginBtn"
        android:id="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/contrasena"
        android:background="#1de5ff"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@android:dimen/thumbnail_width"
        android:layout_height="@android:dimen/thumbnail_height"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/logologin"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/text1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
